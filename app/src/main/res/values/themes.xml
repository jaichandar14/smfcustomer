<resources>
    <!-- Base application theme. -->
    <style name="Theme.Customer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        // windowLightStatusBar for visible status bar text when status bar color is white
        <item name="android:windowLightStatusBar">true</item>
        // Date picker custom theme
        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <!--<item name="fontFamily">@font/inter_regular</item>-->
    </style>

    <style name="ToolBarTitle" parent="Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <!--<item name="fontFamily">@font/inter_regular</item>-->
    </style>

    <style name="TitleCenter" parent="Title">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TitleAccent" parent="Title">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="TitleCenterWhite" parent="TitleWhite">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TitleBlackItalic" parent="Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TitlePrimary" parent="Title">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TitleWhite" parent="Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleWhiteItalic" parent="TitleWhite">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SubTitle" parent="Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="SubTitleLight" parent="Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="SubTitleCenter" parent="SubTitle">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SubTitleAccent" parent="SubTitle">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="SubTitleBlackItalic" parent="SubTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SubTitleBlackItalicCenter" parent="SubTitleBlackItalic">
        <item name="android:gravity">center</item>
    </style>

    <style name="SubTitlePrimary" parent="SubTitle">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="SubSubTitlePrimary" parent="SubTitlePrimary">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="SubSubTitleAccent" parent="SubSubTitlePrimary">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="SubSubTitle" parent="SubTitle">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="SubSubSubTitle" parent="SubTitle">
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

    <style name="SubTitleWhite" parent="SubTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubTitleWhiteCenter" parent="SubTitleWhite">
        <item name="android:gravity">center</item>
    </style>

    <style name="SubTitleWhiteItalic" parent="SubTitleWhite">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:minWidth">@dimen/_50sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">@dimen/_2sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:gravity">center</item>
        <!--<item name="fontFamily">@font/inter_regular</item>-->
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>


    <style name="buttonAccent" parent="button">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:paddingStart">@dimen/_4sdp</item>
        <item name="android:paddingEnd">@dimen/_4sdp</item>
    </style>

    <style name="buttonPrimary" parent="buttonAccent">
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="smallButton" parent="Widget.AppCompat.Button.Small">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:minWidth">@dimen/_30sdp</item>
        <item name="android:elevation">@dimen/_2sdp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="smallButtonAccent" parent="buttonAccent">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:minWidth">@dimen/_30sdp</item>
        <item name="android:height">@dimen/_30sdp</item>
        <item name="android:maxHeight">@dimen/_30sdp</item>
        <item name="android:elevation">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="textButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <!--<item name="fontFamily">@font/inter_regular</item>-->
    </style>

    <style name="textButtonSmall" parent="textButton">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="textButtonBlack" parent="textButton">
        <item name="android:textColor">@color/black</item>
        <item name="background">@color/white</item>
    </style>

    <style name="FabStyle" parent="Widget.Design.FloatingActionButton">
        <item name="tint">@color/white</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="useCompatPadding">true</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:titleTextStyle">@style/SubTitle</item>
        <!--<item name="fontFamily">@font/inter_regular</item>-->
        <item name="android:elevation">@dimen/_40sdp</item>
    </style>

    <style name="AppCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="SettingCardStyle" parent="AppCardStyle">
        <item name="cardElevation">@dimen/_1sdp</item>
        <item name="cardMaxElevation">@dimen/_4sdp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:layout_marginTop">@dimen/_1sdp</item>
        <item name="useCompatPadding">true</item>
        <item name="contentPaddingLeft">@dimen/_10sdp</item>
        <item name="contentPaddingRight">@dimen/_10sdp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="rcContact" parent="SettingCardStyle">
        <item name="useCompatPadding">true</item>
    </style>

    <style name="BaseSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="colorSwitchThumbNormal">@color/grey</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="TextInputOTPLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:layout_margin">@dimen/_2sdp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="TextInputOTPLayoutStyle">
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:layout_margin">@dimen/_12sdp</item>
    </style>

    <!-- Full Screen Dialog Theme -->
    <style name="FullScreenDialogTheme" parent="Theme.Customer">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_event_progress_bar</item>
    </style>

    <style name="CustomTextInputLayout">
        <item name="boxCollapsedPaddingTop">-6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
    </style>

    // Date picker custom theme

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CurrentDate" parent="Widget.MaterialComponents.MaterialCalendar.Day.Today">
        <item name="itemStrokeColor">@color/calendar_current_date</item>
        <item name="itemStrokeWidth">2dp</item>
    </style>

    <style name="SelectedDate" parent="@style/Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="itemFillColor">@color/calendar_selected_date</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemStrokeWidth">0dp</item>
    </style>

    <style name="SelectedYear" parent="@style/Widget.MaterialComponents.MaterialCalendar.Year.Selected">
        <item name="itemFillColor">@color/calendar_selected_date</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemStrokeColor">@color/calendar_selected_date</item>
    </style>

    <style name="Material.calendarStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="dayTodayStyle">@style/CurrentDate</item>
        <item name="daySelectedStyle">@style/SelectedDate</item>
        <item name="yearSelectedStyle">@style/SelectedYear</item>
    </style>

    <style name="KeyBoardInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/theme_color</item>
        //For title text
        <item name="colorOnPrimary">@color/white</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
        </item>
        <item name="materialCalendarStyle">@style/Material.calendarStyle</item>
        <!-- Customize text field of the text input mode. -->
        <item name="textInputStyle">@style/KeyBoardInput</item>
    </style>
</resources>